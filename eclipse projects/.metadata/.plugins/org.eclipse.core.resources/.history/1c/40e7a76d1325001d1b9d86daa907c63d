interface arithmatic
{
	public void operation(int a,int b);
}
public class LambdaEx {

	public static void main(String[] args) {
		/*addition a1= (a,b) -> {System.out.println("Addition: "+(a+b));};
		a1.add(20,30);
		
		subtraction s1= (c,d) ->  {return(c-d);};
		System.out.println("Subtraction: "+s1.sub(50,20));
		
		multiplication m1=(int e,int f)->{return(e*f);};
		System.out.println("multiplication : "+m1.mul(5, 4));
		*/
		arithmatic add=(a,b) ->{ System.out.println("addition: "+(a+b));};
		add.operation(12, 15);
		
		arithmatic sub=(a,b) ->{ System.out.println("subtraction: "+(a-b));};
		sub.operation(18, 15);
		
		arithmatic mul=(a,b) ->{ System.out.println("multiplication: "+(a*b));};
		mul.operation(120, 15);
		
		arithmatic div=(a,b) ->{ System.out.println("divided: "+(a/b));};
		div.operation(5, 25);
		
		

	}

}
